<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgrounCard"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/cardPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_Categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:text="Categoria"
            android:visibility="visible"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <ImageView
            android:id="@+id/img_promo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/text_Categoria"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:visibility="visible"
            android:src="@drawable/carita_tin2"
            android:contentDescription="Imagen promo"/>

        <TextView
            android:id="@+id/giroPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_promo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/bg_badge_radius_circle"
            android:text="GIRO"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/txt_tipoPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/giroPromo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="Anuncio"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tipoPromo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Descripcion:"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/linear_fecha_negocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@+id/txt_descripcion"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/nombre_negocioPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text=" - "
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/txt_nombreNegocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_terminos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_fecha_negocio"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="TÃ©rminos:"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt_abierto_cerrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_terminos"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:background="@drawable/texview_badge_sqare_blue"
            android:text="Cerado"
            android:padding="3dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>